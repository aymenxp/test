
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width" />
    <title>NewFlight</title>
</head>
<body>
    <div style="padding:10px"> 
        <form id="form-addflight" class="form-group" style="display: inline-grid;">

            <label>flight Number : <input id="flightNumber" type="text" class="input-group" /> </label>

            <label>
                Departure Airport : <select id="departureAirport" class="input-group">
                    @foreach (var airport in ViewData["Airports"] as List<FlightsTestWebApp.Models.AirportDAO>)
                    {
                        <option id="@airport.Id">@airport.Name</option>
                    }
                </select>
            </label>

            <label>
                Destination Airport : <select id="destinationAirport" class="input-group">
                    @foreach (var airport in ViewData["Airports"] as List<FlightsTestWebApp.Models.AirportDAO>)
                    {
                        <option id="@airport.Id">@airport.Name</option>
                    }
                </select>
            </label>

            <label>DepartingTime : <input id="departingTime" type="text" class="input-group" /></label>

            <label>ArrivingTime : <input id="arrivingTime" type="text" class="input-group" /></label>
            <br />
            <button id="saveflight">Save flight</button>
        </form>
    </div>
</body>
</html>

<script type="text/javascript">

    $("#saveflight").click(function()
    {
        $.post("SaveFlight",
            {
                FlightNumber: $("#flightNumber").val(),
                Departure_aeroport: $("#departureAirport").val(),
                Destination_aeroport: $("#destinationAirport").val(),
                Departure_Time: $("#departingTime").val(),
                Arriving_Time: $("#arrivingTime").val(),
            },
            function (data, status) {
               
            });
    }
    )
    
</script>